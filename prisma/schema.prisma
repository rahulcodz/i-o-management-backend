generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id          Int      @id @default(autoincrement())
  name        String
  email       String?
  phone       String?
  address     String?
  users       User[]
  customers   Customer[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id             Int          @id @default(autoincrement())
  email          String       @unique
  password       String
  name           String
  mobile         String?
  roleId         Int?
  role           Role?        @relation(fields: [roleId], references: [id])
  organizationId Int?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  managedCustomers Customer[]  @relation("CustomerManager")
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  permissions Json?
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Customer {
  id             Int          @id @default(autoincrement())
  customerName   String
  email          String?
  country        String
  company        String?
  address        String
  bankName       String?
  beneficiaryName String?
  accountNo      Int?
  accountType    String?
  other          String?
  managerId      Int?
  manager        User?        @relation("CustomerManager", fields: [managerId], references: [id])
  organizationId Int?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  deletedAt      DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}
