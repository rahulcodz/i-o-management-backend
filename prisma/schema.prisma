generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id          Int      @id @default(autoincrement())
  name        String
  email       String?
  phone       String?
  address     String?
  users       User[]
  customers   Customer[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id             Int          @id @default(autoincrement())
  email          String       @unique
  password       String
  name           String
  mobile         String?
  roleId         Int?
  role           Role?        @relation(fields: [roleId], references: [id])
  organizationId Int?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  managedCustomers Customer[]  @relation("CustomerManager")
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  permissions Json?
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Customer {
  id             Int          @id @default(autoincrement())
  customerName   String
  email          String?
  country        String
  company        String?
  addresses      Json?        // Array of { name: string }
  bankName       String?
  beneficiaryName String?
  accountNo      Int?
  accountType    String?
  other          String?
  isActive       Boolean      @default(true)
  swiftcode      String?
  managerId      Int?
  manager        User?        @relation("CustomerManager", fields: [managerId], references: [id])
  organizationId Int?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  deletedAt      DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Port {
  id        Int      @id @default(autoincrement())
  country   String
  portName  String
  portCode  String?
  deletedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Unit {
  id         Int      @id @default(autoincrement())
  orderUnit  String
  default    Boolean  @default(false)
  advanced   Json?    // { packagingUnit: string, weight: number, note: string }
  deletedAt  DateTime?
  products   Product[]
  quotationProducts QuotationProduct[] @relation("QuotationProductUnit")
  proformaInvoiceProducts ProformaInvoiceProduct[] @relation("ProformaInvoiceProductUnit")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Product {
  id              Int      @id @default(autoincrement())
  // Product Detail fields
  name            String?
  gst             String?
  description     String?  @db.Text
  hsnSac          String?
  image           String?
  inventoryType   String?  @default("Finished Goods")
  // Advanced fields
  productTag      String?
  unitId          Int
  unit            Unit     @relation(fields: [unitId], references: [id])
  netWeight       Float?
  grossWeight     Float?
  dimensionLength Float?
  dimensionWidth  Float?
  dimensionHeight Float?
  sellPrice       Float?
  // Variants stored as JSON array
  variants        Json?    // Array of { variantName: string, variantImage: string }
  // Scheme details stored as JSON array
  schemes         Json?    // Array of { name: string, unitId: number, percentageValue: number, percentageUnit: string, capValue: number, capUnit: string }
  quotationProducts QuotationProduct[] @relation("QuotationProductProduct")
  proformaInvoiceProducts ProformaInvoiceProduct[] @relation("ProformaInvoiceProductProduct")
  deletedAt       DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model PackageType {
  id            Int      @id @default(autoincrement())
  packageType   String
  markAsDefault Boolean  @default(false)
  quotationProducts QuotationProduct[] @relation("QuotationProductPackageType")
  proformaInvoiceProducts ProformaInvoiceProduct[] @relation("ProformaInvoiceProductPackageType")
  deletedAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model PaymentTerm {
  id            Int      @id @default(autoincrement())
  name          String
  term          String
  markAsDefault Boolean  @default(false)
  deletedAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ShipmentTerm {
  id            Int      @id @default(autoincrement())
  name          String
  term          String
  markAsDefault Boolean  @default(false)
  deletedAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Currency {
  id            Int      @id @default(autoincrement())
  currencyName  String
  symbol        String?
  words         String?
  markAsDefault Boolean  @default(false)
  deletedAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model BankDetail {
  id              Int      @id @default(autoincrement())
  bankName        String
  accountNo       String
  swiftCode       String
  otherDetails    String?
  ifscCode        String
  isVostroPayment String?  @default("N")
  beneficiaryName String
  accountType     String?  @default("CURRENT ACCOUNT")
  markAsDefault   Boolean  @default(false)
  adCode          String
  vostroType      String?
  deletedAt       DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model QualitySpeculation {
  id            Int      @id @default(autoincrement())
  name          String
  specification String
  deletedAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Material {
  id            Int      @id @default(autoincrement())
  materialName  String
  markAsDefault Boolean  @default(false)
  quotationProducts QuotationProduct[] @relation("QuotationProductMaterial")
  proformaInvoiceProducts ProformaInvoiceProduct[] @relation("ProformaInvoiceProductMaterial")
  deletedAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Quotation {
  id                Int      @id @default(autoincrement())
  quotationNo       String   @unique
  date              DateTime?
  consigneeDetails  Json?    // { buyerOrderNo, orderDate, consigneeId, consigneeAddressId, notifyPartyId, otherNotifyPartyId, country, portId }
  shipmentDetails   Json?    // Conditional based on salesBroker
  salesBroker       Boolean  @default(false)
  remark            String?
  quotationProducts QuotationProduct[]
  proformaInvoices  ProformaInvoice[]
  deletedAt         DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model QuotationProduct {
  id              Int       @id @default(autoincrement())
  quotationId     Int
  quotation       Quotation @relation(fields: [quotationId], references: [id], onDelete: Cascade)
  productId       Int?
  product         Product?  @relation("QuotationProductProduct", fields: [productId], references: [id])
  unitId          Int?
  unit            Unit?     @relation("QuotationProductUnit", fields: [unitId], references: [id])
  quantity        Float?
  price           Float?
  total           Float?   // Calculated: quantity * price
  package         String?   // Package field
  productDescription String? @db.Text
  netWeight       Float?
  grossWeight     Float?
  totalPackages   Float?
  packageTypeId   Int?
  packageType     PackageType? @relation("QuotationProductPackageType", fields: [packageTypeId], references: [id])
  qualitySpec     String?
  materialId      Int?
  material        Material? @relation("QuotationProductMaterial", fields: [materialId], references: [id])
  marking         String?
  markingFile     String?
  totalNetWeight  Float?
  totalGrossWeight Float?
  deletedAt       DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model InternationalInvoiceConfiguration {
  id                        Int      @id @default(autoincrement())
  pinCode                   String?
  declarationExport         String
  declarationDomestic       String?  @db.Text
  invoiceSeriesSettingBasedOn String? @default("General Setting For All Invoice")
  piSeriesSettingBasedOn    String? @default("General Setting For All PI")
  invoicePrefix             String?
  invoiceStartFrom          Int?     @default(0)
  invoiceSuffix             String?
  piPrefix                  String?
  piStartFrom               Int?     @default(0)
  piSuffix                  String?
  quotationPrefix           String?
  quotationStartFrom        Int?     @default(0)
  quotationSuffix           String?
  poPrefix                  String?
  poStartFrom               Int?     @default(0)
  poSuffix                  String?
  servicePoPrefix           String?
  servicePoStartFrom        Int?     @default(0)
  servicePoSuffix           String?
  piInvoiceNoEditing        Boolean  @default(true)
  deletedAt                 DateTime?
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
}

model DomesticInvoiceConfiguration {
  id                    Int      @id @default(autoincrement())
  domesticInvoicePrefix String?
  domesticInvoiceStartFrom Int?  @default(0)
  domesticInvoiceSuffix String?
  domesticPiPrefix      String?
  domesticPiStartFrom   Int?     @default(0)
  domesticPiSuffix      String?
  deletedAt             DateTime?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model ProformaInvoice {
  id                        Int      @id @default(autoincrement())
  quotationId               Int?
  quotation                 Quotation? @relation(fields: [quotationId], references: [id])
  piNo                      String   @unique
  date                      DateTime?
  consigneeDetails          Json?    // { consigneeId, consigneeAddressId, country, finalDestinationPortId }
  shipmentDetails           Json?    // { countryOfOrigin, preCarriageBy, countryOfLoading, countryOfDischarge, portOfDischarge, currencyId, conversionRate, bankId, paymentTermId, shipmentTermId, shipmentPeriod, orderType }
  shipmentModel             Json?    // { shipmentMode, ft20FCL, ft40FCL, ft40HC, ft20LCL, ft40LCL, dryBulk, liquidBulk, isoTank, flexiTank, totalNetWeight, totalGrossWeight, total, freight, freightIncludeInTotal, insurance, insuranceIncludeInTotal, grandTotal }
  remarks                   String?  @db.Text
  internalNote              String?  @db.Text
  productionDate            DateTime?
  productionExpiryDate      DateTime?
  placeOfReceiptByPreCarrier String?
  vesselFlightNo            String?
  salesBroker               Boolean  @default(false)
  palletised                Boolean  @default(false)
  brokerage                 Float?
  brokeragePercentage       Float?
  soldBy                    String?
  proformaInvoiceProducts   ProformaInvoiceProduct[]
  proformaInvoiceContainers ProformaInvoiceContainer[]
  deletedAt                 DateTime?
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
}

model ProformaInvoiceProduct {
  id                Int       @id @default(autoincrement())
  proformaInvoiceId Int
  proformaInvoice   ProformaInvoice @relation(fields: [proformaInvoiceId], references: [id], onDelete: Cascade)
  productId         Int?
  product           Product?  @relation("ProformaInvoiceProductProduct", fields: [productId], references: [id])
  unitId            Int?
  unit              Unit?     @relation("ProformaInvoiceProductUnit", fields: [unitId], references: [id])
  quantity          Float?
  price             Float?
  total             Float?    // Calculated: quantity * price
  package           String?
  productDescription String?  @db.Text
  netWeight         Float?
  grossWeight       Float?
  totalPackages     Float?
  packageTypeId     Int?
  packageType       PackageType? @relation("ProformaInvoiceProductPackageType", fields: [packageTypeId], references: [id])
  qualitySpec       String?
  materialId        Int?
  material          Material? @relation("ProformaInvoiceProductMaterial", fields: [materialId], references: [id])
  marking           String?
  markingFile       String?
  deletedAt         DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model ProformaInvoiceContainer {
  id                Int       @id @default(autoincrement())
  proformaInvoiceId Int
  proformaInvoice   ProformaInvoice @relation(fields: [proformaInvoiceId], references: [id], onDelete: Cascade)
  containerNo       String?
  lineSealNo        String?
  rfidSealNo        String?
  sizeType          String?
  boxes             Int?
  lotNo             String?
  netWeight         Float?
  grossWeight       Float?
  deletedAt         DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
