generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id          Int      @id @default(autoincrement())
  name        String
  email       String?
  phone       String?
  address     String?
  users       User[]
  customers   Customer[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id             Int          @id @default(autoincrement())
  email          String       @unique
  password       String
  name           String
  mobile         String?
  roleId         Int?
  role           Role?        @relation(fields: [roleId], references: [id])
  organizationId Int?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  managedCustomers Customer[]  @relation("CustomerManager")
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  permissions Json?
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Customer {
  id             Int          @id @default(autoincrement())
  customerName   String
  email          String?
  country        String
  company        String?
  address        String
  bankName       String?
  beneficiaryName String?
  accountNo      Int?
  accountType    String?
  other          String?
  isActive       Boolean      @default(true)
  swiftcode      String?
  managerId      Int?
  manager        User?        @relation("CustomerManager", fields: [managerId], references: [id])
  organizationId Int?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  deletedAt      DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Port {
  id        Int      @id @default(autoincrement())
  country   String
  portName  String
  portCode  String?
  deletedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Unit {
  id         Int      @id @default(autoincrement())
  orderUnit  String
  default    Boolean  @default(false)
  deletedAt  DateTime?
  products   Product[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Product {
  id              Int      @id @default(autoincrement())
  // Product Detail fields
  name            String
  gst             Float?   @default(0)
  description     String?  @db.Text
  hsnSac          String
  image           String?
  inventoryType   String?  @default("Finished Goods")
  // Advanced fields
  productTag      String?
  unitId          Int
  unit            Unit     @relation(fields: [unitId], references: [id])
  netWeight       Float?
  grossWeight     Float?
  dimensionLength Float?
  dimensionWidth  Float?
  dimensionHeight Float?
  sellPrice       Float?
  customFields    Json?    // Array of { fieldName: string, value: string }
  // Variants stored as JSON array
  variants        Json?    // Array of { variantName: string, variantImage: string }
  // Scheme details stored as JSON array
  schemes         Json?    // Array of { name: string, unit: string, percentageValue: number, percentageUnit: string, capValue: number, capUnit: string }
  deletedAt       DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model PackageType {
  id            Int      @id @default(autoincrement())
  packageType   String
  markAsDefault Boolean  @default(false)
  deletedAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model PaymentTerm {
  id            Int      @id @default(autoincrement())
  name          String
  term          String
  markAsDefault Boolean  @default(false)
  deletedAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ShipmentTerm {
  id            Int      @id @default(autoincrement())
  name          String
  term          String
  markAsDefault Boolean  @default(false)
  deletedAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Currency {
  id            Int      @id @default(autoincrement())
  currencyName  String
  symbol        String?
  words         String?
  markAsDefault Boolean  @default(false)
  deletedAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model BankDetail {
  id              Int      @id @default(autoincrement())
  bankName        String
  accountNo       String
  swiftCode       String
  otherDetails    String?
  ifscCode        String
  isVostroPayment String?  @default("N")
  beneficiaryName String
  accountType     String?  @default("CURRENT ACCOUNT")
  markAsDefault   Boolean  @default(false)
  adCode          String
  vostroType      String?
  deletedAt       DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model QualitySpeculation {
  id            Int      @id @default(autoincrement())
  name          String
  specification String
  deletedAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
